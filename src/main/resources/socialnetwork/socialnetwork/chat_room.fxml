<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="socialnetwork.socialnetwork.gui.ChatRoomController" prefHeight="600.0" prefWidth="800.0">
    <VBox spacing="10" alignment="CENTER">
        <TextArea fx:id="chatArea" prefHeight="500" editable="false"/>
        <HBox spacing="10">
            <TextField fx:id="chatInput" promptText="Type your message"/>
            <Button text="Send" onAction="#handleSendMessage"/>
        </HBox>
    </VBox>
</AnchorPane>
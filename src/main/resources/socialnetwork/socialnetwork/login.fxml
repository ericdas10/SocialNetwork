<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<HBox xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="socialnetwork.socialnetwork.gui.LoginController">
    <children>
        <!-- Left half with green background and "SocialNetwork" text -->
        <VBox alignment="CENTER" prefHeight="500.0" prefWidth="326.0" style="-fx-background-color: green;">
            <children>
                <Label text="SocialNetwork" textFill="white">
                    <font>
                        <Font name="Dubai Medium" size="50.0" />
                    </font>
                </Label>
            </children>
        </VBox>

        <!-- Right half with login form -->
        <GridPane alignment="CENTER" hgap="10" prefHeight="500.0" prefWidth="275.0" vgap="10">
            <padding>
                <Insets bottom="25" left="25" right="25" top="25" />
            </padding>
            <columnConstraints>
                <ColumnConstraints halignment="CENTER" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints valignment="CENTER" />
                <RowConstraints valignment="CENTER" />
                <RowConstraints valignment="CENTER" />
                <RowConstraints valignment="CENTER" />
            </rowConstraints>
            <children>
                <TextField fx:id="usernameField" promptText="Username" GridPane.rowIndex="0" />
                <PasswordField fx:id="passwordField" promptText="Password" GridPane.rowIndex="1" />
                <HBox alignment="CENTER" spacing="10" GridPane.rowIndex="2">
                    <children>
                        <Button fx:id="loginButton" onAction="#handleLoginOrSignUp" style="-fx-background-color: green; -fx-text-fill: white;" text="Log In" />
                        <Button fx:id="signUpButton" onAction="#handleSignUp" style="-fx-background-color: green; -fx-text-fill: white;" text="Sign Up" />
                    </children>
                </HBox>
                <Button onAction="#handleExit" style="-fx-background-color: red; -fx-text-fill: white;" text="Exit" GridPane.rowIndex="3" />
            </children>
        </GridPane>
    </children>
</HBox>

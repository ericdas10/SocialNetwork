            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Button>
        <Button layoutX="934.0" layoutY="561.0" mnemonicParsing="false" style="-fx-background-color: red;" text="Exit" onAction="#handleExit">
            <font>
                <Font name="System Bold" size="10.0" />
            </font>
        </Button>
    </children>
</AnchorPane>